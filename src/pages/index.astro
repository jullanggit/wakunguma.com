---
import Layout from "../layouts/Layout.astro";
import type { Frontmatter } from "../lib";

type Article = {
	url:string
	frontmatter: Frontmatter
} 

const articles:Article[] = Object.values(
	import.meta.glob('./blog/*.md',{eager:true})
)
const headline = articles.pop()
---
<Layout>
	<main>
		<a href={headline?.url} class="flex gap-36 items-center col-span-full">
			<img 
				src={headline?.frontmatter.image} 
				alt="" 
				srcset="" 
				class="w-full aspect-[4/3] rounded-[12px]"
			>
			<div>
				<h4 class="mb-8">{headline?.frontmatter.title}</h4>
				<div class="flex gap-12 mb-12">
					<p>{headline?.frontmatter.author}</p>
					<p>{headline?.frontmatter.published}</p>
				</div>
				<p>{headline?.frontmatter.synopsis}</p>
			</div>
		</a>
		{articles.map(post =>
			<a href={post.url} class="space-y-36">
				<img 
					src={post.frontmatter.image} 
					alt="" 
					srcset="" 
					class="w-full aspect-[4/3] rounded-[12px]"
				>
				<div>
					<h4 class="mb-8">{post.frontmatter.title}</h4>
					<div class="flex gap-12 mb-12">
						<p>{post.frontmatter.author}</p>
						<p>{post.frontmatter.published}</p>
					</div>
					<p>{post.frontmatter.synopsis}</p>
				</div>
			</a>
		)}
	</main>
</Layout>

<style>
	main{
		display: grid;
		grid-template-columns: repeat(auto-fit,minmax(450px,1fr));
		gap: 64px;
		padding: 64px;
	}
</style>